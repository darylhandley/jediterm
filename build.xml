    <target name="build-tests">

        <mkdir dir="${tests-classes}"/>
        <javac destdir="${tests-classes}" includeantruntime="false" source="1.5" target="1.5">
            <src path="${src-tests}"/>
            <src path="${src-terminal}"/>

